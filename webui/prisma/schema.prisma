generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  // provider = "mysql"
  url      = env("DATABASE_URL")
}

model rcv_form {
  id         Int      @id @default(autoincrement())
  empno      String
  name       String
  items      item[]
  cost_dept  String?
  rcv_dept   String?
  remark     String?
  created_at DateTime @default(now())
  process    Int      @default(0)

  @@index([empno])
  @@index([name])
  @@index([process])
}

model item {
  id     Int      @id @default(autoincrement())
  itemno   String // why not name `title/name/...`
  qty    Int
  form   rcv_form @relation(fields: [formid], references: [id])
  formid Int

  @@index([itemno])
}
