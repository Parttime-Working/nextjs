generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model rcv_form {
  id        Int     @id @default(autoincrement())
  empno     String
  name      String
  items     item[]
  cost_dept String?
  rcv_dept  String?
  remark    String?
}

model item {
  id     Int      @id @default(autoincrement())
  item   String
  qty    Int
  form   rcv_form @relation(fields: [formid], references: [id])
  formid Int
}
